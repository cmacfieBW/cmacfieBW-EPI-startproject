@using EPiServer.Core
@using EPiServer.Web;
@using EPiServer.Web.Mvc.Html
@using StartProjectGuide.Models.ViewModels;
@using StartProjectGuide.Business.BaseClasses;
@using System.Web.Mvc;
@using StartProjectGuide.Business;
@using StartProjectGuide.Models.Pages;
@model  StartProjectGuide.Business.Interfaces.IPageViewModel<StartProjectGuide.Business.BaseClasses.BasePageData>
@{
    var startPage = ContentShortcuts.GetStartPage();
    var pages = startPage.ContentLink.GetChildren().ToList().Select(a => a as BasePageData);
}
<header class="container">
    <a href="/" class="logo">
        <img src="~/Static/images/bw.svg" />
    </a>
    <div class="menu-items-row">
        <div class="menu-items">
            @foreach (var page in pages)
            {
                if (page.CustomMenuLink != null)
                {
                    <a class="menu-item" href="@page.CustomMenuLink">@page.Name</a>
                }
                else
                {
                    @Html.PageLink(page, null, new { @class = "menu-item" })
                }
            }
        </div>
    </div>
</header>
