@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@using StartProjectGuide.Business
@using StartProjectGuide.Models.ViewModels;
@using StartProjectGuide.Business.BaseClasses;
@using StartProjectGuide.Business.Extensions
@using StartProjectGuide.Models.Pages
@model  StartProjectGuide.Business.Interfaces.IPageViewModel<StartProjectGuide.Business.BaseClasses.BasePageData>
@{
    var startPage = ContentShortcuts.GetStartPage();
    var contacts = ContentShortcuts.GetContactPages().GetChildren();

}
<footer>
    <div class="span3 column wrap page-links">
        @foreach (var page in startPage.ContentLink.GetChildren().ToList().Select(m => m as BasePageData))
        {
            <h3><a class="white" href="@Url.ContentUrl(page.ContentLink)">@page.Name</a></h3>
        }
    </div>
    <div class="span3 column">
        <div class="column">
            <h2 class="white">Follow us</h2>
            @if (startPage.FacebookLink != null)
            {
                <span class="row social-media-link"><img class="icon small" src="~/Static/images/facebook-icon.svg" /><a href="@Url.ContentUrl(startPage.FacebookLink)" class="menu-item">Facebook</a></span>
            }
            @if (startPage.InstagramLink != null)
            {
                <span class="row social-media-link"><img class="icon small" src="~/Static/images/instagram-icon.svg" /><a href="@Url.ContentUrl(startPage.InstagramLink)" class="menu-item">Instagram</a></span>
            }
            @if (startPage.LinkedInLink != null)
            {
                <span class="row social-media-link"><img class="icon small" src="~/Static/images/linkedin-icon.svg" /><a href="@Url.ContentUrl(startPage.LinkedInLink)" class="menu-item">LinkedIn</a></span>
            }
            @if (startPage.TwitterLink != null)
            {
                <span class="row social-media-link"><img class="icon small" src="~/Static/images/linkedin-icon.svg" /><a href="@Url.ContentUrl(startPage.TwitterLink)" class="menu-item">Twitter</a></span>
            }
        </div>
        <div class="row wrap">
            <div class="span6"><img src="~/Static/images/gazelle2018.png" /></div>
            <div class="span6"><img src="~/Static/images/gazelle2019.png" /></div>
            <div class="span6"><img src="~/Static/images/aaa.png" /></div>
        </div>
    </div>
    <div class="span6 row wrap white">
        @if (contacts != null)
        {
            foreach (var contactPage in contacts.ToList().Select(x => x as ContactPage))
            {
                <div class="span6">
                    @Html.Partial("~/Views/Shared/PagePartials/ContactInfo.cshtml", contactPage)
                </div>
            }
        }
    </div>
</footer>