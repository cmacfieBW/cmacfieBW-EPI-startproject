@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@model StartProjectGuide.Models.Blocks.TextSectionWithButtonBlock
<div class="section info-box-block">
    <h1>@Html.PropertyFor(m => m.Header)</h1>
    @Html.PropertyFor(m => m.Body)
    @if (Model.Button.Text.Length > 0 && Model.Button.Url.Path != "")
    {
        @Html.PropertyFor(m => m.Button)
    }
</div>